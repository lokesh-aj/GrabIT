<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GrabIT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_dark_theme</item>
        <item name="colorSecondaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_primary_dark</item>
        <!-- Background & Surface colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background_dark</item>
        <item name="android:textColorSecondary">@color/on_background_dark</item>
        <!-- Disable the default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- CardView and other component styles -->
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>
    </style>

    <style name="Theme.GrabIT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GrabIT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GrabIT.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <!-- Custom styles for dark theme -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>

    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView.Dark</item>
        <item name="android:background">@color/surface_dark</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView.Dark" parent="">
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
    </style>
</resources>