<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center">

    <View
        android:id="@+id/ripple_view_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_ripple"
        android:alpha="0"/>

    <View
        android:id="@+id/ripple_view_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_ripple"
        android:alpha="0"/>

    <View
        android:id="@+id/ripple_view_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_ripple"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/checkmark_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_checkmark_circle"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Successful"
            android:textColor="#FF4141"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹1,299.00"
            android:textColor="#5F6368"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/ord_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order id"
            android:textColor="#5F6368"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>