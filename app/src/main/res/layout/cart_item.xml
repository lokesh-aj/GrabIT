<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"> <!-- Add a gradient background -->

    <!-- CardView for Cart Item -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/gray"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/cartImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:elevation="5dp"
                android:padding="8dp"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Spicy Fresh Crab"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/cartImage"
                app:layout_constraintTop_toTopOf="@id/cartImage"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$35"
                android:textColor="@color/textColor_New"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/productName"
                app:layout_constraintTop_toBottomOf="@id/productName" />

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/button_minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/greenbuttongradient"
                android:contentDescription="Decrease Quantity"
                android:padding="8dp"
                android:src="@drawable/minus"
                app:layout_constraintStart_toStartOf="@id/cartImage"
                app:layout_constraintTop_toBottomOf="@id/cartImage"
                app:tint="@color/white" />

            <!-- Quantity Text -->
            <TextView
                android:id="@+id/cartItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/button_minus"
                app:layout_constraintTop_toTopOf="@id/button_minus"
                app:layout_constraintBottom_toBottomOf="@id/button_minus"
                android:paddingHorizontal="12dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/button_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/greenbuttongradient"
                android:contentDescription="Increase Quantity"
                android:padding="8dp"
                android:src="@drawable/plus"
                app:layout_constraintStart_toEndOf="@id/cartItemQuantity"
                app:layout_constraintTop_toTopOf="@id/button_minus"
                app:tint="@color/white" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/trash"
                android:contentDescription="Remove Item"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_plus" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
